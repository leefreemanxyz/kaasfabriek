<% form_for @cart do |f| %>
<div class="form-wrapper">
  <div class="form-group">
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>

  <%= f.hidden_field :product_id %>

    </div>
    <div class="actions">
      <%= f.submit "Save" , class: "btn btn-success" %>
    </div>
  </div>
  <%= f.submit "Add to Cart" %>
<% end %>
