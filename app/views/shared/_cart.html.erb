<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
  <div class="list-group">
    <%= link_to "Shopping Cart", current_cart_path, class: "list-group-item active" %>
    <% if (@cart.items.length > 0)  %>
      <% @cart.items.each do |item| %>
        <a href="#" class="list-group-item">
          <%= item.amount %>x&emsp;<%= item.product.name %><span style="float: right;"><%= number_to_currency(item.item_total_price, unit: "€") %></span>
        </a>
        <% end %>
      <%  else  %>
      <a href="#" class="list-group-item">Your cart is empty</a>
      <% end %>
    <a href="#" class="list-group-item active">Total: <span style="float:right;font-weight:bold;"><%= number_to_currency(@cart.total_price, unit: "€") %></a>
  </div>
</div>
